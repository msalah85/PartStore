@using SysLanguages;
@{
    ViewData["Title"] = Lang.Home;
}
<br />
<div class="row page-titles">
    <div class="col-md-12 align-self-center">
        <br />
        <h1>
            @Lang.Dashboard
        </h1>
        <br />
        <br />
    </div>
    <div class="col-md-8">
        <div class="col-md-6">
            <div class="card bg-info">
                <div class="card-body">
                    <a class="d-flex no-block" href="Invoices/Create">
                        <div class="m-r-20 align-self-center"><span class="glyphicon text-white glyphicon-euro" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="text-white m-t-10 m-b-0">@Lang.AddANewPartsInvoice.</h6>
                            <h2 class="m-t-0 text-white">@Lang.AddInvoice</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-primary">
                <div class="card-body">
                    <a class="d-flex no-block" href="Invoices">
                        <div class="m-r-20 align-self-center"><span class="glyphicon text-white glyphicon-list-alt" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="text-white m-t-10 m-b-0">@Lang.ViewPartInvoicesList.</h6>
                            <h2 class="m-t-0 text-white">@Lang.InvoicesList</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-primary">
                <div class="card-body">
                    <a class="d-flex no-block" href="Items/Create">
                        <div class="m-r-20 align-self-center"><span class="glyphicon text-white glyphicon-compressed" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="text-white m-t-10 m-b-0">@Lang.AddANewCar</h6>
                            <h2 class="m-t-0 text-white">@Lang.AddCar</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-danger">
                <div class="card-body">
                    <a class="d-flex no-block" href="Items">
                        <div class="m-r-20 align-self-center"><span class="glyphicon text-white glyphicon-list" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="text-white m-t-10 m-b-0">@Lang.AllAvailableCarsList</h6>
                            <h2 class="m-t-0 text-white">@Lang.CarsList</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-dark">
                <div class="card-body">
                    <a class="d-flex no-block" href="Accounts">
                        <div class="m-r-20 align-self-center"><span class="glyphicon text-white glyphicon-user" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="text-white m-t-10 m-b-0">@Lang.CustomersSupliersEtc</h6>
                            <h2 class="m-t-0 text-white">@Lang.Accounts</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-megna">
                <div class="card-body">
                    <a class="d-flex no-block" href="Banks">
                        <div class="m-r-20 align-self-center"><span class="glyphicon text-white glyphicon-lock" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="text-white m-t-10 m-b-0">@Lang.BanksAndCacheBoxes</h6>
                            <h2 class="m-t-0 text-white">@Lang.Banks</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-warning">
                <div class="card-body">
                    <a class="d-flex no-block" href="Payments/Create">
                        <div class="m-r-20 align-self-center"><span class="glyphicon text-white glyphicon-plus" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="text-white m-t-10 m-b-0">@Lang.AddANewPayments</h6>
                            <h2 class="m-t-0 text-white">@Lang.AddPayments</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-success">
                <div class="card-body">
                    <a class="d-flex no-block" href="Payments">
                        <div class="m-r-20 align-self-center"><span class="glyphicon text-white glyphicon-bitcoin" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="text-white m-t-10 m-b-0">@Lang.PaymentsReceiptsList</h6>
                            <h2 class="m-t-0 text-white">@Lang.Payments</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <partial name="~/Views/Items/CarSearchFrom.cshtml" />
        </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-grey">
                <div class="card-body">
                    <a class="d-flex no-block" href="#">
                        <div class="m-r-20 align-self-center"><span class="glyphicon glyphicon-flash" aria-hidden="true"></span></div>
                        <div class="align-self-center">
                            <h6 class="m-t-10 m-b-0">@Lang.TodayTotalCache</h6>
                            <h2 class="m-t-0">0</h2>
                        </div>
                    </a>
                </div>
            </div>
            <div class="list-group">
                <a href="#" class="list-group-item active"> @Lang.DailyTransactionReport <span class="badge">0</span></a>
                <a href="#" class="list-group-item">@Lang.Inventory <span class="badge">0</span></a>
                <a href="#" class="list-group-item">@Lang.SalesAnalysisReport</a>
                <a href="#" class="list-group-item">@Lang.PurchaseAnalysisReport</a>
                <a href="#" class="list-group-item">@Lang.Installments <span class="badge">0</span></a>
            </div>
            <br />
            <br />
            <div class="list-group">
                <a href="#" class="list-group-item"><strong>@Lang.TotalNotifications</strong> <span class="badge">0</span></a>
                <a href="#" class="list-group-item">@Lang.DueChecksCount <span class="badge">0</span></a>
                <a href="#" class="list-group-item">@Lang.CustomersAccountsToReview <span class="badge">0</span></a>
            </div>
        </div>
    </div>

