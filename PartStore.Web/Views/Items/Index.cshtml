@using SysLanguages
@model IEnumerable<PartStore.Core.StoreModels.Items>

@{
    ViewData["Title"] = Lang.CarsList;
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">@Lang.New</a>
</p>
<table class="table table-bordered table-responsive table-hover table-striped">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Lang.Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Lang.Quantity
            </th>
            <th>
                @Lang.Price
            </th>
            <th>
                @Lang.VIN
            </th>
            <th>@Lang.Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemId)
                </td>
                <td>
                    <a asp-controller="Photos" asp-action="Index" asp-route-id="@item.ItemId"><img src="~/public/@Html.DisplayFor(modelItem => item.Photos.FirstOrDefault().Url)" height="40" /></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make.MakeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model.ModelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year.YearId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vin)
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            @Lang.Options
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
                            <li>
                                <a asp-controller="Photos" asp-action="Index" asp-route-id="@item.ItemId">@Lang.Photos</a>
                            </li>
                            <li>
                                <a asp-action="Car" asp-route-id="@item.ItemId">المبيعات</a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li>
                                <a asp-action="Edit" asp-route-id="@item.ItemId">@Lang.Edit</a>
                            </li>
                            <li> <a asp-action="Delete" asp-route-id="@item.ItemId">@Lang.Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
