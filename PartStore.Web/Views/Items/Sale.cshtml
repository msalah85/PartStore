        </dd>
        <br />
        <hr />
        <br />
        <dt>
            <label asp-for="Sold">@Lang.Sold</label>
        </dt>
        <dd>
            <form asp-action="EditSale" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ItemId" />
                <div class="form-group">
                    <select class="form-control" asp-for="Sold">
                        <option value="False">غير مباعة</option>
                        <option value="True">مباعة</option>
                    </select>
                    <span asp-validation-for="Sold" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Lang.Save" class="btn btn-default" />
                </div>
            </form>
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ItemId">@Lang.Edit</a> |
    <a asp-action="Index">@Lang.BackToList</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}
