@model PartStore.Core.StoreModels.Items

@{
    ViewData["Title"] = "Edit car info";
}

<h2>Edit</h2>

<h4>Car</h4>
<hr />
<div class="row">
    <form asp-action="Edit" method="post">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemId" />
            <div class="form-group">
                <label asp-for="MakeId" class="control-label">Make</label>
                <select asp-for="MakeId" class="form-control" asp-items="ViewBag.MakeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ModelId" class="control-label">Model</label>
                <select asp-for="ModelId" class="form-control" asp-items="ViewBag.ModelId"></select>
            </div>
            <div class="form-group">
                <label asp-for="YearId" class="control-label">Year</label>
                <select asp-for="YearId" class="form-control" asp-items="ViewBag.YearId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Vin" class="control-label">VIN</label>
                <input asp-for="Vin" class="form-control" />
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Barcode" class="control-label"></label>
                <input asp-for="Barcode" class="form-control" />
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label">Quantity</label>
                <input asp-for="Qty" class="form-control" value="1" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastCost" class="control-label">Purchase price (AED)</label>
                <input asp-for="LastCost" class="form-control" />
                <span asp-validation-for="LastCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="More" class="control-label">Notes</label>
                <textarea asp-for="More" class="form-control" rows="3"></textarea>
                <span asp-validation-for="More" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
