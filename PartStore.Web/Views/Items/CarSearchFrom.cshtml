@using SysLanguages
<div class="row">
    <form>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">@Lang.SearchBy</label>
                <select class="form-control" name="searchType">
                    <option value="id">رقم السيارة</option>
                    <option value="lot">رقم اللوت</option>
                    <option value="vin">رقم الشاصي</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" required name="searchVl" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <br />
                <button class="btn btn-lg btnSearch" type="button" title="@Lang.Search"><span class="glyphicon glyphicon-search" style="font-size: 45px;display: block;"></span> @Lang.Search</button>
            </div>
        </div>
    </form>
</div>