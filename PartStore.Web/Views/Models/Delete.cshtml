@using SysLanguages
@model PartStore.Core.StoreModels.Models

@{
    ViewData["Title"] = Lang.Delete;
}

<h2>@Lang.Delete</h2>

<h3>@Lang.DeleteConfirm</h3>
<div>
    <h4>@Lang.Models</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ModelName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Make.MakeName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ModelId" />
        <input type="submit" value="@Lang.Delete" class="btn btn-default" /> |
        <a asp-action="Index">@Lang.BackToList</a>
    </form>
</div>
