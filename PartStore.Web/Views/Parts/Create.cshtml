@using SysLanguages
@model PartStore.Core.StoreModels.Parts

@{
    ViewData["Title"] = Lang.CreateNewPart;
}

<h2>@ViewData["Title"]</h2>

<h4>@Lang.CarParts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Lang.Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Lang.BackToList</a>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#Name').focus();
        });
    </script>
}